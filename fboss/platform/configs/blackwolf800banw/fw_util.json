{
  "fwConfigs": {
    "bios": {
      "upgrade": [
        {
          "commandType": "flashrom",
          "flashromArgs": {
            "spi_layout": "3000000:3FFFFFF image",
            "programmer_type": "internal",
            "flashromExtraArgs": [
              "-i",
              "image",
              "--noverify-all"
            ]
          }
        }
      ],
      "verify": {
        "commandType": "flashrom",
        "flashromArgs": {
          "spi_layout": "3000000:3FFFFFF image",
          "programmer_type": "internal",
          "flashromExtraArgs": [
            "-i",
            "image",
            "--noverify-all"
          ]
        }
      },
      "read": {
        "commandType": "flashrom",
        "flashromArgs": {
          "spi_layout": "3000000:3FFFFFF image",
          "programmer_type": "internal",
          "flashromExtraArgs": [
            "-i",
            "image",
            "--noverify-all"
          ]
        }
      },
      "version": {
        "versionType": "sysfs",
        "path": "/sys/devices/virtual/dmi/id/bios_version"
      },
      "priority": 5
    },
    "scm_cpld": {
      "upgrade": [
        {
          "commandType": "jam",
          "jamArgs": {
            "jamExtraArgs": [
              "-aprogram",
              "-fmeru_cpu_cpld",
              "-v"
            ]
          }
        }
      ],
      "version": {
        "versionType": "sysfs",
        "path": "/run/devmap/inforoms/MERU_SCM_CPLD_INFO_ROM/fw_ver"
      },
      "priority": 4
    },
    "chassis_cpld": {
      "preUpgrade": [
        {
          "commandType": "jtag",
          "jtagArgs": {
            "path": "/run/devmap/fpgas/MERU_SCM_CPLD/switch_jtag_enable",
            "value": 1
          }
        },
        {
          "commandType": "jtag",
          "jtagArgs": {
            "path": "/run/devmap/fpgas/MERU_SCM_CPLD/switch_jtag_sel",
            "value": 0
          }
        }
      ],
      "upgrade": [
        {
          "commandType": "jam",
          "jamArgs": {
            "jamExtraArgs": [
              "-aprogram",
              "-fmeru_switch_cpld",
              "-v"
            ]
          }
        }
      ],
      "version": {
        "versionType": "sysfs",
        "path": "/run/devmap/cplds/CHASSIS_CPLD/fw_ver"
      },
      "priority": 3
    },
    "smb_fpga": {
      "upgrade": [
        {
          "commandType": "flashrom",
          "flashromArgs": {
            "spi_layout": "0:3FFFFF image",
            "programmer_type": "linux_spi:dev=",
            "programmer": "/run/devmap/flashes/SMB_SPI_MASTER0_DEVICE1",
            "flashromExtraArgs": [
              "-i",
              "image"
            ],
            "chip": [
              "MT25QL256",
              "N25Q256..3E"
            ]
          }
        }
      ],
      "version": {
        "versionType": "sysfs",
        "path": "/run/devmap/inforoms/SMB_FPGA_INFO_ROM/fw_ver"
      },
      "priority": 2
    },
    "fan_cpld": {
      "preUpgrade": [
        {
          "commandType": "jtag",
          "jtagArgs": {
            "path": "/run/devmap/fpgas/MERU_SCM_CPLD/switch_jtag_enable",
            "value": 1
          }
        },
        {
          "commandType": "jtag",
          "jtagArgs": {
            "path": "/run/devmap/fpgas/MERU_SCM_CPLD/switch_jtag_sel",
            "value": 1
          }
        },
        {
          "commandType": "jtag",
          "jtagArgs": {
            "path": "/run/devmap/cplds/CHASSIS_CPLD/jtag_mux_en",
            "value": 1
          }
        },
        {
          "commandType": "jtag",
          "jtagArgs": {
            "path": "/run/devmap/cplds/CHASSIS_CPLD/jtag_mux_sel",
            "value": 2
          }
        }
      ],
      "upgrade": [
        {
          "commandType": "jam",
          "jamArgs": {
            "jamExtraArgs": [
              "-aprogram",
              "-fmeru_fan_cpld",
              "-v"
            ]
          }
        }
      ],
      "version": {
        "versionType": "sysfs",
        "path": "/run/devmap/cplds/FAN_CPLD/hwmon/hwmon*/fw_ver"
      },
      "priority": 1
    }
  }
}
